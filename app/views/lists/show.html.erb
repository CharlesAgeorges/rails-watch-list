<% content_for :banner do %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('<%= cl_image_path("banners/banner_list_qumsnk") %>');">
    <div class="container banner-content">
      <h1><%= @list.name %></h1>
    </div>
  </div>
<% end %>

<div class="container my-4">

  <div class="d-flex justify-content-end mb-3">
    <%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn-green" %>
  </div>

  <% @list.bookmarks.each do |bookmark| %>
    <% movie = bookmark.movie %>

    <div class="card-product">
      <%= image_tag movie.poster_url, alt: movie.title %>

      <div class="card-product-infos">
        <h2>
          <%= movie.title %> • <%= movie.rating %> ⭐
        </h2>

        <p><%= movie.overview %></p>

        <% if bookmark.comment.present? %>
          <p class="review">
            ❝ <%= bookmark.comment %>
          </p>
        <% end %>

        <%= link_to "delete",bookmark_path(bookmark),data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },class: "delete-link" %>
      </div>
    </div>

  <% end %>
</div>
