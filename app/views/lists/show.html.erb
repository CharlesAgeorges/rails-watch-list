<% content_for :banner do %>
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)),url('<%= asset_path "banner_list.jpg" %>');">
    <div class="container banner-content">
      <h1><%= @list.name %></h1>
    </div>
  </div>
<% end %>


<div class="container my-4">

  <div class="d-flex justify-content-end mb-3">
    <%= link_to "add a movie", new_list_bookmark_path(@list), class: "btn-green" %>
  </div>

  <div class="movies-grid">
    <% @list.bookmarks.each do |bookmark| %>
      <% movie = bookmark.movie %>
      <div class="movie-card">
        <div class="movie-card-image"
             style="background-image: url('<%= movie.poster_url %>');">
        </div>

        <div class="movie-card-body">
          <p class="movie-title-line">
            <strong><%= movie.title %></strong>
            <span class="movie-rating">
              • <%= movie.rating %> ⭐
            </span>
          </p>

          <p class="movie-overview">
            <%= movie.overview %>
          </p>

          <p class="movie-comment">
            <i class="fa-solid fa-quote-left"></i>
            <%= bookmark.comment %>
          </p>

          <%= link_to "delete", bookmark_path(bookmark),data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },class: "movie-delete" %>
        </div>
      </div>
    <% end %>
  </div>

</div>
